#:kivy 2.1.0

#:set this_file '1.2.2'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    # variables to share with root class in the Python file
    label_wid: main_message
    slider_y1: left
    slider_y2: right
    slider_y3: height_left
    slider_y4: height_rigth

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (0.075, 0.075)  ## Empty space
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: height_left
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    step: 0.05
                    value: 0
                    orientation: 'vertical'

            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: left
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: -10
                    max: 0
                    value: 0
                    step: 0.01
                    orientation: 'horizontal'
                Slider:
                    id: right
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: 0
                    max: 10
                    value: 0
                    step: 0.01
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:
                size_hint: (1, 0.925)
                canvas:
                    Line:
                        points: root.l_1
                        width: line_width
                    Color:
                        rgba: rojo
                    Ellipse:  # Left point
                        pos: root.p_A
                        size: point_size, point_size
                    Color:
                        rgba: verde
                    Ellipse:  # Right oint
                        pos: root.p_B
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True

            BoxLayout:
                size_hint: (0.075, 0.075)  ## Empty space
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: height_rigth
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    step: 0.05
                    value: 0
                    orientation: 'vertical'


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
