#:kivy 2.1.0

#:set prev_file '1.2.1'
#:set this_file '1.2.2'
#:set this_cap_sec  cap1_sec2
#:set next_file ''

#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]
#:set prev_symbol ' ' if not prev_file else '<--'
#:set next_symbol ' ' if not next_file else '-->'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_y1: left
    slider_y2: right

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: left
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: -3
                    max: 0
                    value: 0
                    step: 0.1
                    orientation: 'horizontal'
                Slider:
                    id: right
                    on_value: root.cap1_sec2_pag2()  # Call the code on event
                    min: 0
                    max: 3
                    value: 0
                    step: 0.1
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:
                size_hint: (1, 0.925)
                canvas:
                    Line:
                        points: root.l_1
                        width: line_width
                    Color:
                        rgba: cafe_claro
                    Ellipse:  # Left point
                        pos: root.p_A
                        size: point_size, point_size
                    Ellipse:  # Right oint
                        pos: root.p_B
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'



        RstDocument:
            canvas.before:
                Color:
                    rgba: amarillo
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: azul
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: this_cap_sec + ' - p√°g. ' + page
            Button:
                size_hint_x: None
                width: self.height
                text: prev_symbol
                on_release: app.next_screen(prev_file)
            Button:
                size_hint_x: None
                width: self.height
                text: next_symbol
                on_release: app.next_screen(next_file)
