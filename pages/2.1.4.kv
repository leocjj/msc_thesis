#:kivy 2.1.0

#:set prev_file '2.1.3'
#:set this_file '2.1.4'
#:set this_cap_sec  cap2_sec1
#:set next_file '2.1.5'
#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]

#:set prev_symbol prev_symbol_path
#:set next_symbol next_symbol_path

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_x: x
    slider_y: y

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y
                    on_value: root.cap2_sec1_pag4()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: 0
                    step: 0.001
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x
                    on_value: root.cap2_sec1_pag4()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: 0
                    step: 0.001
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Color:
                        rgba: cafe_claro
                    Line:  # Horizontal fixed line bottom
                        points: root.l_1
                        width: line_width
                    Color:
                        rgba: azul
                    Line:  # rotating line left
                        points: root.l_2
                        width: line_width
                    Color:
                        rgba: rojo
                    Line:  # rotating line right
                        points: root.l_3
                        width: line_width
 
                    Color:
                        rgba: rojo
                    Ellipse:  # Vertex point left
                        pos: root.p_A
                        size: point_size, point_size
                    Color:
                        rgba: azul
                    Ellipse:  # Vertex point right
                        pos: root.p_B
                        size: point_size, point_size
                    Color:
                        rgba: cafe_claro
                    Ellipse:  # Vertex point top
                        pos: root.p_C
                        size: point_size, point_size

                    Color:
                        rgba: cafe_claro
                    Ellipse:  # For the middle point
                        pos: root.p_D
                        size: point_size, point_size
                    Color:
                        rgba: cafe_claro
                    Line:  # Mediatrix line
                        points: root.l_4

                    Color:
                        rgba: azul
                    Ellipse:  # For the middle point
                        pos: root.p_E
                        size: point_size, point_size
                    Color:
                        rgba: azul
                    Line:  # Mediatrix line
                        points: root.l_5

                    Color:
                        rgba: rojo
                    Ellipse:  # For the middle point
                        pos: root.p_F
                        size: point_size, point_size
                    Color:
                        rgba: rojo
                    Line:  # Mediatrix line
                        points: root.l_6

                    Color:
                        rgba: blanco
                    Ellipse:  # Circuncenter
                        pos: root.p_G
                        size: point_size, point_size

                    Color:
                        rgba: gris
                    Line:  # Circunscrite circunference
                        circle: root.c_1
                    
                    Color:
                        rgba: gris_oscuro
                    Line:  # Curve line (bezier line)
                        bezier: root.p_0
                        dash_length: 5
                        dash_offset: 5
                    Line:  # Curve line (bezier line)
                        bezier: root.p_1
                        dash_length: 5
                        dash_offset: 5
                    Line:  # Curve line (bezier line)
                        bezier: root.p_2
                        dash_length: 5
                        dash_offset: 5

                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: footer_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            IconButton:
                source: prev_symbol
                color: blanco if prev_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(prev_file)
            Label:
                text: this_cap_sec + ' - pÃ¡g. ' + page
                color: footer_text_color
            IconButton:
                source: next_symbol
                color: blanco if next_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(next_file)
