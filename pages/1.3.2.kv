#:kivy 2.1.0

#:set this_file '1.3.2'

#:set prev_symbol prev_symbol_path
#:set next_symbol next_symbol_path

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_x1: x1
    slider_x2: x2
    slider_y1: y1
    slider_y2: y2

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 3
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y2
                    on_value: root.cap1_sec3_pag2()  # Call the code on event
                    min: -0.6
                    max: 0.7
                    value: 0.1
                    step: 0.01
                    orientation: 'vertical'
            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:
                size_hint: (0.075, 0.925)
                Slider:
                    id: y1
                    on_value: root.cap1_sec3_pag2()  # Call the code on event
                    min: -0.6
                    max: 0.7
                    value: -0.1
                    step: 0.01
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x2
                    on_value: root.cap1_sec3_pag2()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: 0.1
                    step: 0.01
                    orientation: 'horizontal'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x1
                    on_value: root.cap1_sec3_pag2()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: -0.1
                    step: 0.01
                    orientation: 'horizontal'

            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:  # Y-axis
                        points: root.width / 2, root.height * 6 / 10, root.width / 2 , root.height * 15 / 16
                    Line:  # X-axis
                        points: root.width/10, root.height * 3 / 4, root.width*9/10, root.height * 3 / 4

                    Color:
                        rgba: cafe_claro
                    Line:  # Main line, from A to B
                        points: root.l_1
                        dash_length: 5
                        dash_offset: 5

                    Color:
                        rgba: azul
                    Line:  # Secondary line, x-distance
                        points: root.l_2
                        width: line_width
                    Ellipse:  # Point A
                        pos: root.p_A
                        size: point_size, point_size

                    Color:
                        rgba: rojo
                    Line:  # Secondary line, y-distance
                        points: root.l_3
                        width: line_width
                    Ellipse:  # Point B
                        pos: root.p_B
                        size: point_size, point_size

                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
