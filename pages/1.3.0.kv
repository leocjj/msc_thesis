#:kivy 2.1.0

#:set this_file '1.3.0'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_y1: y1
    slider_y2: y2

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y2
                    on_value: root.cap1_sec3_pag0()  # Call the code on event
                    min: -0.6
                    max: 0.7
                    value: 0.3
                    step: 0.001
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: y1
                    on_value: root.cap1_sec3_pag0()  # Call the code on event
                    min: 0
                    max: 180
                    value: 0
                    step: 0.001
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:  # Rotating line
                        points: root.p_0
                        width: line_width
                    Color:
                        rgba: cafe_claro
                    Line:  # Fixed line
                        points: root.p_1
                        width: line_width
                    Color:
                        rgba: rojo
                    Ellipse:  # Base point for rotating line
                        pos: root.p_3
                        size: point_size, point_size
                    Color:
                        rgba: verde
                    Ellipse:  # Intersection point
                        pos: root.p_4
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
