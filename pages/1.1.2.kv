#:kivy 2.1.0

#:set this_file '1.1.2'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_x: x
    slider_y: y

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y
                    on_value: root.cap1_sec1_pag2()  # Send value to .py file
                    min: -0.6
                    max: 0.7
                    step: 0.01
                    value: 0
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.925, 0.075)  # Buttom-right
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x
                    on_value: root.cap1_sec1_pag2()  # Send value to .py file
                    min: -0.7
                    max: 0.7
                    step: 0.01
                    value: 0
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the right
            BoxLayout:
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:  # Y-axis
                        points: root.width / 2, root.height * 6 / 10, root.width / 2 , root.height * 15 / 16
                    Line:  # X-axis
                        points: root.width/10, root.height * 3 / 4, root.width*9/10, root.height * 3 / 4
                    Color:
                        rgba: rojo
                    Ellipse:  # Origin point
                        pos: root.p_B
                        size: point_size, point_size
                    Color:
                        rgba: verde
                    Ellipse:  # Mobile point
                        pos: root.p_A
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
