#:kivy 2.1.0

#:set this_file '1.2.1'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    # variables to share with root class in the Python file
    label_wid: main_message
    slider_y1: y1
    slider_y2: y2

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (0.075, 0.075)  ## Empty space
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y2
                    on_value: root.cap1_sec2_pag1()  # Call the code on event
                    min: -1.3
                    max: 1.0
                    step: 0.05
                    value: -1
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.075, 0.075)  # Empty space
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y1
                    on_value: root.cap1_sec2_pag1()  # Call the code on event
                    min: -1.3
                    max: 1.0
                    step: 0.05
                    value: 1
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.075, 0.075)  # Empty space
            BoxLayout:
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Color:
                        rgba: cafe_claro
                    Line:  # y1 line
                        dash_length: 5
                        dash_offset: 5
                        points: root.width / 4, root.height * 6 / 10, root.width / 4 , root.height * 15 / 16
                    Line:  # y2 line
                        dash_length: 5
                        dash_offset: 5
                        points: root.width * 3 / 4, root.height * 6 / 10, root.width * 3 / 4 , root.height * 15 / 16
                    Line:  # Curve line (bezier line)
                        bezier: root.p_0
                        width: line_width
                    Color:
                        rgba: cafe_claro
                    Ellipse:  # y1 point
                        pos: root.p_3
                        size: point_size, point_size
                    Ellipse:  # y2 point
                        pos: root.p_4
                        size: point_size, point_size
                    Color:
                        rgba: rojo
                    Ellipse:  # Fixed left point
                        pos: root.width/10 - offset, root.height * 6 / 8 - offset
                        size: point_size, point_size
                    Color:
                        rgba: verde
                    Ellipse:  # Fixed right point
                        pos: root.width*8/10 - offset, root.height * 3 / 4 - offset
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
