#:kivy 2.1.0

#:set prev_file '1.2'
#:set this_file '1.2.1'
#:set this_cap_sec  cap1_sec2
#:set next_file '1.2.2'

#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]
#:set prev_symbol ' ' if not prev_file else '<--'
#:set next_symbol ' ' if not next_file else '-->'

#:set point_size 6
#:set offset point_size / 2

RootWidget:
    # import container
    container: container
    # variables to share with root class in the Python file
    label_wid: main_message
    slider_y1: y1
    slider_y2: y2

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (0.075, 0.075)  # Bottom laceholder
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y2
                    on_value: root.cap1_sec2_pag1()  # Call the code on event
                    min: -1
                    max: 1
                    step: 0.05
                    value: -1
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.075, 0.075)  # Bottom laceholder
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y1
                    on_value: root.cap1_sec2_pag1()  # Call the code on event
                    min: -1
                    max: 1
                    step: 0.05
                    value: 1
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.075, 0.075)  # Bottom laceholder
            BoxLayout:
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:  # Curve line (bezier line)
                        bezier: root.p_0
                    Color:
                        rgba: cafe_claro
                    Line:
                        dash_length: 5
                        dash_offset: 5
                        points: root.width / 4, root.height * 6 / 10, root.width / 4 , root.height * 15 / 16
                    Ellipse:  # y1 point
                        pos: root.width / 4 - offset, root.height * 6 / 8 - offset
                        size: point_size, point_size
                    Line:
                        dash_length: 5
                        dash_offset: 5
                        points: root.width * 3 / 4, root.height * 6 / 10, root.width * 3 / 4 , root.height * 15 / 16
                    Ellipse:  # Left point
                        pos: root.width/10 - offset, root.height * 6 / 8 - offset
                        size: point_size, point_size
                    Ellipse:  # Right point
                        pos: root.width*8/10 - offset, root.height * 3 / 4 - offset
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'


        RstDocument:
            canvas.before:
                Color:
                    rgba: amarillo
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: azul
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: this_cap_sec + ' - p√°g. ' + page
            Button:
                size_hint_x: None
                width: self.height
                text: prev_symbol
                on_release: app.next_screen(prev_file)
            Button:
                size_hint_x: None
                width: self.height
                text: next_symbol
                on_release: app.next_screen(next_file)
