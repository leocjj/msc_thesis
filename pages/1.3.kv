#:kivy 2.1.0

#:set prev_file ''
#:set this_file '1.3'
#:set this_cap_sec  cap1_sec3
#:set next_file '1.3.1'
#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]

#:set prev_symbol prev_symbol_path
#:set next_symbol next_symbol_path

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_y1: y1
    slider_y2: y2

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y2
                    on_value: root.cap1_sec3_pag0()  # Call the code on event
                    min: -0.6
                    max: 0.7
                    value: 0.3
                    step: 0.01
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: y1
                    on_value: root.cap1_sec3_pag0()  # Call the code on event
                    min: 0
                    max: 180
                    value: 0
                    step: 0.01
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:  # Rotating line
                        points: root.p_0
                        width: line_width
                    Color:
                        rgba: cafe_claro
                    Line:  # Fixed line
                        points: root.p_1
                        width: line_width
                    Ellipse:  # Base point for rotating line
                        pos: root.p_3
                        size: point_size, point_size
                    Color:
                        rgba: blanco
                    Ellipse:  # Intersection point
                        pos: root.p_4
                        size: point_size, point_size
                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'



        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: footer_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            IconButton:
                source: prev_symbol
                color: blanco if prev_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(prev_file)
            Label:
                text: this_cap_sec + ' - pÃ¡g. ' + page
                color: footer_text_color
            IconButton:
                source: next_symbol
                color: blanco if next_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(next_file)
