#:kivy 2.1.0

# Paleta de colores
# rgba: 0.430, 0.305, 0.223, 1  # 110,78,57  0x6E4E39 Café oscuro
# rgba: 0.684, 0.473, 0.293, 1  # 175,121,75 0xAF794B Café
# rgba: 0.848, 0.645, 0.375, 1  # 217,165,96 0xD9A560 Café claro
# rgba: 0.988, 0.914, 0.789, 1  # 253,234,202 0xFDEACA Amarillo pálido
# rgba: 0.945, 0.945, 0.938, 1  # 242,242,240 0xF2F2F0 Gris claro
# rgba: 0.203, 0.395, 0.641, 1  # 52,101,164 0x3465A4 Azul para el texto

# Texto
# https://docutils.sourceforge.io/rst.html
# https://docutils.sourceforge.io/docs/user/rst/quickref.html

RootWidget:
    # import container
    container: container
    # fullscreen: True

    # main window
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 2

        # top menu
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 2
            size_hint_y: None
            height: '40dp'

            Button:
                size_hint_x: None
                width: self.height
                text: " ? "
                on_release: app.next_screen('00')

            # Display selectors for sections and sub-sections
            # The number will be used to open the corresponding file
            Carousel:
                id: carousel
                loop: False
                Spinner:
                    text: "Capítulos"
                    on_text: app.next_screen(self.text)
                Spinner:
                    text: "Capítulo 1"
                    values: "1-0 PUNTOS Y RECTAS", "1-1 Conceptos", "1-2 Línea recta", "1-3 Dos líneas rectas", "1-4 Tres líneas rectas"
                    on_text: app.next_screen(self.text)
                Spinner:
                    text: "Capítulo 2"
                    values: "2-0 POLÍGONOS", "2-1 De tres lados", "2-2 De cuatro lados", "2-3 De más lados"
                    on_text: app.next_screen(self.text)
                Spinner:
                    text: "Capítulo 3"
                    values: "3-0 LÍNEAS CURVAS", "3-1 Cerradas", "3-2 Círculos", "3-3 Abiertas"
                    on_text: app.next_screen(self.text)
                Spinner:
                    text: "Capítulo 4"
                    values: "4-0 CONCEPTOS 3D", "4-1 Puntos", "4-2 Líneas", "4-3 Polígonos", "4-4 Planos", "4-5 Sólidos"
                    on_text: app.next_screen(self.text)
            Button:
                size_hint_x: None
                width: self.height
                text: '<--'
                on_release: carousel.load_previous()
            Button:
                size_hint_x: None
                width: self.height
                text: '-->'
                on_release: carousel.load_next()

        # create container to show content
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.684, 0.473, 0.293, 1  # 175,121,75 0xAF794B Café
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: container

