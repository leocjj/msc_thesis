#:kivy 2.1.0

#:set this_file '2.1.6'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_x: x
    slider_y: y

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y
                    on_value: root.cap2_sec1_pag6()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: 0
                    step: 0.001
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x
                    on_value: root.cap2_sec1_pag6()  # Call the code on event
                    min: -0.7
                    max: 0.7
                    value: 0
                    step: 0.001
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Color:
                        rgba: cafe_claro
                    Line:  # Horizontal fixed line bottom
                        points: root.l_1
                        width: line_width
                    Color:
                        rgba: azul
                    Line:  # rotating line left
                        points: root.l_2
                        width: line_width
                    Color:
                        rgba: rojo
                    Line:  # rotating line right
                        points: root.l_3
                        width: line_width
 
                    Color:
                        rgba: amarillo
                    Line:  # Euler's line
                        points: root.l_4
                        dash_length: 5
                        dash_offset: 5

                    Color:
                        rgba: rojo
                    Ellipse:  # Circuncenter
                        pos: root.p_G
                        size: point_size, point_size
                    Line:  # Circunscrite circunference
                        circle: root.c_1

                    Color:
                        rgba: gris
                    Ellipse:  # Incenter
                        pos: root.p_G2
                        size: point_size, point_size
                    Line:  # Inscrite circunference
                        circle: root.c_2

                    Color:
                        rgba: azul
                    Ellipse:  # Baricenter
                        pos: root.p_G3
                        size: point_size, point_size

                    Color:
                        rgba: verde
                    Ellipse:  # Orthocenter
                        pos: root.p_G4
                        size: point_size, point_size
                    Line:  # Inscrite circunference
                        circle: root.c_4


                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
