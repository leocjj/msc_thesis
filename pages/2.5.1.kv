#:kivy 2.1.0

#:set this_file '2.5.1'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1
#:set line_width_2 1.4

RootWidget:
    # import container
    container: container
    label_wid: main_message
    slider_x: x
    slider_y: y

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    id: y
                    on_value: root.cap2_sec5_pag1()  # Call the code on event
                    min: 4
                    max: 10
                    value: 4
                    step: 2
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: x
                    on_value: root.cap2_sec5_pag1()  # Call the code on event
                    min: 0
                    max: 3.14
                    value: 0
                    step: 0.01
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right

            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Color:
                        rgb: verde
                    Line:  # Hight of the triangle
                        points: root.v_0
                        width: line_width_2
                    Color:
                        rgb: azul
                    Line:  # Diagonal
                        points: root.l_1
                        width: line_width
                    Line:  # Diagonal
                        points: root.l_2
                        width: line_width
                    Line:  # Diagonal
                        points: root.l_3
                        width: line_width
                    Line:  # Diagonal
                        points: root.l_4
                        width: line_width
                    Line:  # Diagonal
                        points: root.l_5
                        width: line_width
                    Color:
                        rgb: rojo
                    Ellipse:  # Center of the polygon
                        pos: root.p_A
                        size: point_size, point_size 

                Label:
                    id: main_message
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    markup: True

        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
