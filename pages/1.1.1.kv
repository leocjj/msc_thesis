#:kivy 2.1.0

#:set prev_file '1.1'
#:set this_file '1.1.1'
#:set this_cap_sec  cap1_sec1
#:set next_file '1.1.2'

#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]
#:set prev_symbol ' ' if not prev_file else '<--'
#:set next_symbol ' ' if not next_file else '-->'

RootWidget:
    # import container
    container: container
    # label_wid: my_custom_label

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    on_value: root.cap1_sec1_pag1_y(float(args[1]))  # Send value to .py file
                    min: 0
                    max: 1
                    orientation: 'vertical'
            BoxLayout:
                size_hint: (0.925, 0.075)  # Buttom-right
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    on_value: root.cap1_sec1_pag1_x(float(args[1]))  # Send value to .py file
                    min: 0
                    max: 1
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the right
            BoxLayout:
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:
                        points: root.p_1
                    Line:
                        points: root.p_2
                    Color:
                        rgba: azul
                    Ellipse:
                        pos: root.p_0
                        size: 6, 6
                Label:
                    id: my_custom_label
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'


        RstDocument:
            canvas.before:
                Color:
                    rgba: amarillo
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: azul
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: this_cap_sec + ' - p√°g. ' + page
            Button:
                size_hint_x: None
                width: self.height
                text: prev_symbol
                on_release: app.next_screen(prev_file)
            Button:
                size_hint_x: None
                width: self.height
                text: next_symbol
                on_release: app.next_screen(next_file)
