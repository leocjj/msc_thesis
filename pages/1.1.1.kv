#:kivy 2.1.0

#:set prev_file '1.1'
#:set this_file '1.1.1'
#:set this_cap_sec  cap1_sec1
#:set next_file '1.1.2'
#:set page '0' if len(this_file.split('.')) <= 2 else this_file.split('.')[2]

#:set prev_symbol prev_symbol_path
#:set next_symbol next_symbol_path

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1

RootWidget:
    # import container
    container: container
    # label_wid: my_custom_label

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:  # Empty space
                size_hint: (0.075, 0.075)  # Buttom-left
            BoxLayout:  # Space for vertical (right) slider
                size_hint: (0.075, 0.925)  # Top-left
                Slider:
                    on_value: root.cap1_sec1_pag1_y(float(args[1]))  # Send value to .py file
                    min: 0
                    max: 1
                    orientation: 'vertical'
            BoxLayout:  # Space for horizontal (buttom) slider
                size_hint: (0.925, 0.075)  # Buttom-right
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    on_value: root.cap1_sec1_pag1_x(float(args[1]))  # Send value to .py file
                    min: 0
                    max: 1
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the right
            BoxLayout:  # Space for canvas
                size_hint: (0.925, 0.925)  # Top-right
                canvas:
                    Line:
                        points: root.p_1
                        width: line_width
                    Line:
                        points: root.p_2
                        width: line_width
                    Color:
                        rgba: rojo
                    Ellipse:  # Point
                        pos: root.p_0
                        size: point_size, point_size
                Label:
                    id: my_custom_label
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: footer_height
            canvas.before:
                Color:
                    rgba: footer_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            IconButton:
                source: prev_symbol
                color: blanco if prev_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(prev_file)
            Label:
                text: this_cap_sec + ' - pÃ¡g. ' + page
                color: footer_text_color
            IconButton:
                source: next_symbol
                color: blanco if next_file else footer_background_color
                height: footer_height
                width: footer_height
                size_hint_x: None
                on_press: app.next_screen(next_file)
