#:kivy 2.1.0

#:set this_file '1.1.0'

#:set point_size 6
#:set offset point_size / 2
#:set line_width 1.1
#:set f 0.7

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        # fill the canvas
        GridLayout:
            rows: 2
            orientation: 'bt-rl' # Slider needs to be specified first, but display order can be changed

            BoxLayout:
                size_hint: (1, 0.075)
                Label:
                    size_hint: (0.2, None)  # To leave 20% free to the left
                Slider:
                    id: wm
                    min: 0
                    max: 1
                    value: 1
                    step: 0.01
                    orientation: 'horizontal'
                Label:
                    size_hint: (0.2, None)    # To leave 20% free to the right
            BoxLayout:
                size_hint: (1, 0.925)
                canvas:
                    Color:
                        rgb: 10, 10, 10
                    Ellipse:
                        pos: root.width/2 - min(root.width,root.height/2)*f*wm.value/2, root.height*3/4 - min(root.width,root.height/2)*f*wm.value/2
                        size: min(root.width,root.height/2)*f*wm.value, min(root.width,root.height/2)*f*wm.value
                Label:
                    #center: root.center
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    text: 'Tama√±o = {}'.format(int(wm.value*100) if wm.value != 0 else f"{int(wm.value)}\n Esto es un punto")
                    markup: True


        RstDocument:
            canvas.before:
                Color:
                    rgba: notes_background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: rst_files_folder + this_file + ".rst"
