#:kivy 2.1.0

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        orientation: 'vertical'
        padding: 0
        spacing: 3

        RstDocument:
            canvas.before:
                Color:
                    rgba: 0.988, 0.914, 0.789, 1  # 253,234,202 0xFDEACA Amarillo pálido
                Rectangle:
                    pos: self.pos
                    size: self.size
            source: 'pages/1-0.rst'

        # Footer
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 1
            size_hint_y: None
            height: '36dp'
            canvas.before:
                Color:
                    rgba: 0.430, 0.305, 0.223, 1  # 110,78,57  0x6E4E39 Café oscuro
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: '1-0 PUNTOS Y RECTAS'
            Button:
                size_hint_x: None
                width: self.height
                text: ' '
                # on_release: app.next_screen('1-0')
            Button:
                size_hint_x: None
                width: self.height
                text: '-->'
                on_release: app.next_screen('1-1')

